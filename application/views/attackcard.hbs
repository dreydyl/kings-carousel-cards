<div class="card-flex">
    <div id="carcard">
        <div id="cartitle">
            <em id="character">
                {{currentCard.character}}
            </em>
            <em id="value">
                {{currentCard.tier}}
            </em>
        </div>
        <div id="rangeview">
            <div id="strong-att" class="hex">
                {{currentCard.strong}}
            </div>
            <div id="range">
                <div id="inner-range"></div>
                <div class="pie">
                    <div id="slice6">
                        <button style="transform: rotate(-15deg) skewY(-60deg)
                            {{#if currentCard.range.[6]}}; {{attackOrHeal currentCard.defaultDamage}} z-index: 6{{/if}}">
                        </button>
                        <button style="transform: rotate(-15deg) skewY(-60deg)">
                            <span style="transform: skewY(60deg) rotate(15deg)" class="text">6</span>
                        </button>
                    </div>
                    <div id="slice7">
                        <button style="transform: rotate(15deg) skewY(-60deg)
                            {{#if currentCard.range.[7]}}; {{attackOrHeal currentCard.defaultDamage}} z-index: 6{{/if}}">
                        </button>
                        <button style="transform: rotate(15deg) skewY(-60deg)">
                            <span style="transform: skewY(60deg) rotate(-15deg)" class="text">7</span>
                        </button>
                    </div>
                    <div id="slice8">
                        <button style="transform: rotate(45deg) skewY(-60deg)
                            {{#if currentCard.range.[8]}}; {{attackOrHeal currentCard.defaultDamage}} z-index: 6{{/if}}">
                        </button>
                        <button style="transform: rotate(45deg) skewY(-60deg)">
                            <span style="transform: skewY(60deg) rotate(-45deg)" class="text">8</span>
                        </button>
                    </div>
                    <div id="slice9">
                        <button style="transform: rotate(75deg) skewY(-60deg)
                            {{#if currentCard.range.[9]}}; {{attackOrHeal currentCard.defaultDamage}} z-index: 6{{/if}}">
                        </button>
                        <button style="transform: rotate(75deg) skewY(-60deg)">
                            <span style="transform: skewY(60deg) rotate(-75deg)" class="text">9</span>
                        </button>
                    </div>
                    <div id="slice10">
                        <button style="transform: rotate(105deg) skewY(-60deg)
                            {{#if currentCard.range.[10]}}; {{attackOrHeal currentCard.defaultDamage}} z-index: 6{{/if}}">
                        </button>
                        <button style="transform: rotate(105deg) skewY(-60deg)">
                            <span style="transform: skewY(60deg) rotate(-105deg)" class="text">10</span>
                        </button>
                    </div>
                    <div id="slice11">
                        <button style="transform: rotate(135deg) skewY(-60deg)
                            {{#if currentCard.range.[11]}}; {{attackOrHeal currentCard.defaultDamage}} z-index: 6{{/if}}">
                        </button>
                        <button style="transform: rotate(135deg) skewY(-60deg)">
                            <span style="transform: skewY(60deg) rotate(-135deg)" class="text">11</span>
                        </button>
                    </div>
                    <div id="slice0">
                        <button style="transform: rotate(165deg) skewY(-60deg)
                            {{#if currentCard.range.[0]}}; {{attackOrHeal currentCard.defaultDamage}} z-index: 6{{/if}}">
                        </button>
                        <button style="transform: rotate(165deg) skewY(-60deg)">
                            <span style="transform: skewY(60deg) rotate(-165deg)" class="text">0</span>
                        </button>
                    </div>
                    <div id="slice1">
                        <button style="transform: rotate(195deg) skewY(-60deg)
                            {{#if currentCard.range.[1]}}; {{attackOrHeal currentCard.defaultDamage}} z-index: 6{{/if}}">
                        </button>
                        <button style="transform: rotate(195deg) skewY(-60deg)">
                            <span style="transform: skewY(60deg) rotate(-195deg)" class="text">1</span>
                        </button>
                    </div>
                    <div id="slice2">
                        <button style="transform: rotate(225deg) skewY(-60deg)
                            {{#if currentCard.range.[2]}}; {{attackOrHeal currentCard.defaultDamage}} z-index: 6{{/if}}">
                        </button>
                        <button style="transform: rotate(225deg) skewY(-60deg)">
                            <span style="transform: skewY(60deg) rotate(-225deg)" class="text">2</span>
                        </button>
                    </div>
                    <div id="slice3" >
                        <button style="transform: rotate(255deg) skewY(-60deg)
                            {{#if currentCard.range.[3]}}; {{attackOrHeal currentCard.defaultDamage}} z-index: 6{{/if}}">
                        </button>
                        <button style="transform: rotate(255deg) skewY(-60deg)">
                            <span style="transform: skewY(60deg) rotate(-255deg)" class="text">3</span>
                        </button>
                    </div>
                    <div id="slice4">
                        <button style="transform: rotate(285deg) skewY(-60deg)
                            {{#if currentCard.range.[4]}}; {{attackOrHeal currentCard.defaultDamage}} z-index: 6{{/if}}">
                        </button>
                        <button style="transform: rotate(285deg) skewY(-60deg)">
                            <span style="transform: skewY(60deg) rotate(-285deg)" class="text">4</span>
                        </button>
                    </div>
                    <div id="slice5">
                        <button style="transform: rotate(315deg) skewY(-60deg)
                            {{#if currentCard.range.[5]}}; {{attackOrHeal currentCard.defaultDamage}} z-index: 6{{/if}}">
                        </button>
                        <button style="transform: rotate(315deg) skewY(-60deg)">
                            <span style="transform: skewY(60deg) rotate(-315deg)" class="text">5</span>
                        </button>
                    </div>
                </div>
            </div>
            <div id="weak-att">
                {{currentCard.weak}}
            </div>
        </div>
        <div id="description-field">
            <div id="description-info">
                <div id="card-name">
                    {{currentCard.name}}
                </div>
                <div id="ig-range">
                    {{#if (strong currentCard.defaultDamage)}}
                    {{currentCard.strong}}
                    {{else if (weak currentCard.defaultDamage)}}
                    {{currentCard.weak}}
                    {{else}}
                    0
                    {{/if}}
                    : {{currentCard.igRange}}
                </div>
            </div>
            <div id="description">
                {{currentCard.description}}
            </div>
        </div>
    </div>
    <div id="color-correcter"></div>
</div>